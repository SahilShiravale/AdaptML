# API Endpoints
NEXT_PUBLIC_API_URL=http://localhost:8000/api
NEXT_PUBLIC_AUTH_API_URL=http://localhost:8000/api/auth
NEXT_PUBLIC_COURSES_API_URL=http://localhost:8000/api/courses
NEXT_PUBLIC_RECOMMENDATIONS_API_URL=http://localhost:8000/api/recommendations
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:8000/ws

# Next.js Configuration
NEXT_PUBLIC_APP_NAME=AI Learning Recommendations
NEXT_PUBLIC_APP_DESCRIPTION=AI-powered learning recommendation platform
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_ENV=development

# Build Configuration
NODE_ENV=development
PORT=3000
ANALYZE=false

# Authentication
NEXT_PUBLIC_AUTH_ENABLED=true
NEXT_PUBLIC_OAUTH_GOOGLE_ENABLED=true
NEXT_PUBLIC_OAUTH_GITHUB_ENABLED=true
# Add your OAuth client IDs here (keep these secure in production)
NEXT_PUBLIC_OAUTH_GOOGLE_CLIENT_ID=your-google-client-id
NEXT_PUBLIC_OAUTH_GITHUB_CLIENT_ID=your-github-client-id

# Feature Flags
NEXT_PUBLIC_FEATURE_RECOMMENDATIONS=true
NEXT_PUBLIC_FEATURE_COURSE_PREVIEW=true
NEXT_PUBLIC_FEATURE_PERSONALIZATION=true
NEXT_PUBLIC_FEATURE_SOCIAL_SHARING=true

# Analytics
NEXT_PUBLIC_ANALYTICS_ENABLED=true
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Caching
NEXT_PUBLIC_CACHE_TTL=3600

# UI Configuration
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_ITEMS_PER_PAGE=10
NEXT_PUBLIC_MAX_RECOMMENDATIONS=20

# Deployment
NEXT_PUBLIC_CDN_URL=http://localhost:3000
NEXT_PUBLIC_ASSET_PREFIX=/

# Timeouts (in milliseconds)
NEXT_PUBLIC_API_TIMEOUT=10000
NEXT_PUBLIC_SEARCH_DEBOUNCE=300
